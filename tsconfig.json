{
	"include": [
		"**/*",
	],
	"exclude": [
    "test/",
		"node_modules",
		"build"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "./",
		"preserveConstEnums": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"allowJs": true,
		"target": "es2018",
		"module": "commonjs",
		"outDir": ".build",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"paths": {
			"App/*": [
				"./app/*"
			],
			"Config/*": [
				"./config/*"
			]
		},
		"lib": [
			"es2018"
		],
		"esModuleInterop": true
	}
}